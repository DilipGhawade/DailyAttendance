<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:id="@+id/layout_presenty"
            android:visibility="visible"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <!-- <ImageView
                     android:layout_width="70dp"
                     android:layout_height="70dp"
                     android:src="@drawable/emp"
                     android:id="@+id/emp_pro_pic"
                     android:scaleType="centerCrop"
                     />-->


                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/tv_empname"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="2017/07/13"
                    android:layout_gravity="center"
                    android:id="@+id/tv_attendanceDate"
                    />

                <Spinner
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/spinner__emp_presenty"
                    ></Spinner>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="Ok"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:background="#FFFFFF"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:id="@+id/btn_ok"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="Fine"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_fine"
                />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_marginTop="40dp"
            android:id="@+id/layout_fine"
            android:visibility="gone"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.60"
                android:scaleY="0.60"
                android:text="Haircut"
                android:textSize="17sp"
                android:id="@+id/chk_haircut"
                android:layout_marginRight="-10dp"
                android:layout_marginLeft="-10dp"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.60"
                android:scaleY="0.60"
                android:text="Saving"
                android:textSize="17sp"
                android:id="@+id/chk_saving"
                android:layout_toRightOf="@+id/chk_haircut"
                android:layout_marginRight="-10dp"
                android:layout_marginLeft="-10dp"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.60"
                android:scaleY="0.60"
                android:text="Late"
                android:textSize="17sp"
                android:id="@+id/chk_late"
                android:layout_toEndOf="@+id/chk_saving"
                android:layout_marginRight="-10dp"
                android:layout_marginLeft="-10dp"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.60"
                android:scaleY="0.60"
                android:text="Report"
                android:textSize="17sp"
                android:id="@+id/chk_report"
                android:layout_toEndOf="@id/chk_late"
                android:layout_marginRight="-10dp"
                android:layout_marginLeft="-10dp"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.60"
                android:scaleY="0.60"
                android:textSize="17sp"
                android:text="Dress"
                android:layout_toEndOf="@+id/chk_report"
                android:id="@+id/chk_dress"
                android:layout_marginRight="-10dp"
                android:layout_marginLeft="-10dp"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.60"
                android:scaleY="0.60"
                android:textSize="17sp"
                android:text="Meeting"
                android:id="@+id/chk_meeting"
                android:layout_marginRight="-10dp"
                android:layout_marginLeft="-10dp"
                android:layout_below="@+id/chk_saving"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.60"
                android:scaleY="0.60"
                android:textSize="17sp"
                android:text="Other"
                android:layout_toRightOf="@+id/chk_meeting"
                android:id="@+id/chk_other"
                android:layout_marginRight="-10dp"
                android:layout_marginLeft="-10dp"
                android:layout_below="@+id/chk_late"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.60"
                android:scaleY="0.60"
                android:textSize="17sp"
                android:text="EquipmentLoss"
                android:layout_toRightOf="@+id/chk_other"
                android:id="@+id/chk_equipmentloss"
                android:layout_marginRight="-10dp"
                android:layout_marginLeft="-35dp"
                android:layout_below="@+id/chk_dress"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.60"
                android:scaleY="0.60"
                android:textSize="17sp"
                android:text="I-Card"
                android:layout_toRightOf="@+id/chk_equipmentloss"
                android:id="@+id/chk_icard"
                android:layout_marginRight="-10dp"
                android:layout_marginLeft="-10dp"
                android:layout_below="@+id/chk_dress"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/chk_icard"
                android:text="Done"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                android:id="@+id/tv_done"
                android:layout_below="@id/chk_meeting"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>